{
  "name": "bodyscript-frontend",
  "version": "1.0.0",
  "description": "BodyScript frontend build system with modern JavaScript and CSS processing",
  "main": "dist/index.html",
  "type": "module",
  "scripts": {
    "setup": "node setup.js",
    "dev": "vite --host 0.0.0.0 --port 3000",
    "dev:enhanced": "node dev-server.js",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "build:custom": "node build.js production",
    "preview": "vite preview --port 3000",
    "clean": "rimraf dist",
    "lint:js": "eslint 'frontend/js/**/*.js'",
    "lint:css": "stylelint 'frontend/css/**/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier --write 'frontend/**/*.{js,css,html}'",
    "format:check": "prettier --check 'frontend/**/*.{js,css,html}'",
    "analyze": "vite-bundle-analyzer dist/assets/*-*.js",
    "test:build": "npm run build && npm run preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@vitest/ui": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitejs/plugin-legacy": "^5.4.2",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.5",
    "eslint": "^9.9.1",
    "postcss": "^8.4.45",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^13.0.0",
    "postcss-preset-env": "^10.0.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "terser": "^5.32.0",
    "vite": "^5.4.5",
    "vite-bundle-analyzer": "^0.11.0",
    "vite-plugin-html": "^3.2.2",
    "vitest": "^2.1.0",
    "jsdom": "^25.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "keywords": [
    "bodyscript",
    "pose-detection",
    "frontend",
    "vite",
    "es6-modules"
  ],
  "author": "BodyScript Project",
  "license": "MIT"
}